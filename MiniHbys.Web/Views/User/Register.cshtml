@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MiniHbys.Common.WebViewModels.RegisterViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mini HBYS | Create New User</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/adminLteSrc/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/adminLteSrc/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/adminLteSrc/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/adminLteSrc/plugins/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/adminLteSrc/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
</head>
<body class="hold-transition register-page">
<div class="register-box">
    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">Create a new user</p>

            @using (Html.BeginForm(actionName: "Register", controllerName: "User", routeValues: null, FormMethod.Post))
            {
                <div class="input-group mb-3">
                    <input name="Name" asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input name="Surname" asp-for="Surname" type="text" class="form-control" placeholder="Surname">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input name="Email" asp-for="Email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input name="Password" asp-for="Password" type="password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input name="RepeatPassword" asp-for="RepeatPassword" type="password" class="form-control" placeholder="Retype password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group date" id="reservationdate" data-target-input="nearest">
                    <input name="Birthdate" asp-for="Birthdate" type="text" class="form-control datetimepicker-input" 
                    data-target="#reservationdate" 
                    placeholder="Birthdate"/>
                    <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
                <div class="social-auth-links text-center">
                    <button type="submit" class="btn btn-block btn-primary">
                        <i class="mr-2"></i>
                        Save
                    </button>
                </div>
            }
        </div>
    </div>
</div>



    <script src="~/adminLteSrc/plugins/jquery/jquery.min.js"></script>
    <script src="~/adminLteSrc/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminLteSrc/dist/js/adminlte.min.js"></script>
    <script src="~/adminLteSrc/plugins/moment/moment.min.js"></script>
    <script src="~/adminLteSrc/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/adminLteSrc/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>

<script>

$(document).ready( function () {
      $('#reservationdate').datetimepicker({
            format: 'L'
        });
});
</script>
</body>
</html>