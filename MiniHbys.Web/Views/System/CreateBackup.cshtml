@model MiniHbys.Web.Models.BackupViewModel

@{
    ViewBag.Title = "Create Backup";
    Layout = "_Layout";
}


@using (Html.BeginForm(actionName: "CreateBackup", controllerName: "System", routeValues: null, method: FormMethod.Post))
{
    <div style="padding: 20px">
        <div class="form-group">
            @Html.TextBoxFor(x => x.Path, htmlAttributes: new
            {
                @class = "form-control", placeholder =
                    "Path"
            })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.FileName, htmlAttributes: new { @class = "form-control", placeholder = "File Name" })
        </div>
        <div style="float: right">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
}
