@model RestoreViewModel

@{
    ViewBag.Title = "Restore Database";
    Layout = "_Layout";
}
@using (Html.BeginForm(actionName: "RestoreDatabase", controllerName: "System", routeValues: null, method: FormMethod.Post))
{
    <div style="padding: 20px">
        <div class="form-group">
            @Html.TextBoxFor(x => x.FullPath, htmlAttributes: new
            {
                @class = "form-control", placeholder =
                    "Path"
            })
        </div>
        <div style="float: right">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
}
